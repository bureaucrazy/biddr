<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @auction.title %>
</p>

<p>
  <strong>Details:</strong>
  <%= @auction.details %>
</p>

<p>
  <strong>End date:</strong>
  <%= @auction.end_date %>
</p>

<%# if @auction.id != current_user.id %>
<% if @place_bid %>
  <p>
    <%= simple_form_for (@bid || Bid.new), html: {class: "form-horizontal"} do |f| %>
      <%= f.input :price, :value => @auction.current_price %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :auction_id, :value => @auction.id %>
      <div class="form-group">
        <%= f.button :submit, class: "btn-primary", data: {disable_with: "saving.."} %>
        <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
      </div>
    <% end %>
  </p>
<% else %>
  <p>
    <strong>Reserve price:</strong>
    <%= @auction.reserve_price %>
  </p>
<% end %>
