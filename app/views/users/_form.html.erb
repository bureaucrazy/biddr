<%= simple_form_for @user, url: users_path do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>

  <% if @user.persisted? %>
    <%= f.input :current_password %>
  <% end %>

  <div class="form-group">
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>
  <div class="form-group">
    <%= f.submit "Sign Up", class: "btn-primary" %>
  </div>
<% end %>
